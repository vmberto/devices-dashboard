{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ],
        "max-line-length": [
            false
        ],
        "no-shadowed-variable": false,
        "curly": [true, "ignore-same-line"]
        
    }
}
